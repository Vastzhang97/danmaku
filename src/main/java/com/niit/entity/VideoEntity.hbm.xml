<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.niit.entity.VideoEntity" table="video" schema="danmaku">
        <id name="vid" column="vid"/>
        <property name="uid" column="uid"/>
        <property name="title" column="title"/>
        <property name="intro" column="intro"/>
        <property name="category" column="category"/>
        <property name="coversrc" column="coversrc"/>
        <property name="videosrc" column="videosrc"/>
        <property name="view" column="view"/>
        <property name="likenum" column="likenum"/>
        <property name="date" column="date"/>
        <property name="danmakunum" column="danmakunum"/>
        <property name="popularitynum" column="popularitynum"/>
        <property name="webpage" column="webpage"/>
        <property name="grade" column="grade"/>
        <property name="gradenum" column="gradenum"/>
        <property name="duration" column="duration"/>
        <property name="status" column="status"/>
    </class>
</hibernate-mapping>